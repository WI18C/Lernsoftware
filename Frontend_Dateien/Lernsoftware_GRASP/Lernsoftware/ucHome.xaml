                </Grid.RowDefinitions>
                <Button Grid.Row="0" x:Name="btnProject4" Content="Project 4" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="18" BorderBrush="#FF7030A0" Background="White" Padding="10" BorderThickness="3" Width="178" Height="178" Foreground="#FF7030A0"/>
